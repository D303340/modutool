component FunctionButtons inherits Rectangle {
    height: 70px;
    width: 90px;

    in property <color> bg-color: #ffffff;
    in property <color> bg-hover-color: #dfdfdf;
    property <color> main-bg-color: bg-color;

    in property <string> text: "test";

    callback clicked();

    background: main-bg-color;
    
    ta := TouchArea {
        Text {
            text: text;
            color: #000000;
            font-size: 18px;
        }

        clicked => {
            clicked();
            active = !active;
        }
    }
        
        property <bool> active: false;
        states [
        active when ta.pressed: {
            main-bg-color:  bg-hover-color;
        }
    ]
}
component FileButtons inherits Rectangle {
    height: 70px;

    in property <string> text;

    in property <color> bg-color: #bbbbbb;
    in property <color> bg-hover-color: #dddddd;
    property <color> main-bg-color: bg-color;
    
    callback clicked();

    background: main-bg-color;

    border-width: 2px;
    border-radius: 4px;
    border-color: main-bg-color;

    ta := TouchArea {
        Text {
            text: text;
            font-size: 16px;
        }

        clicked => {
            clicked();
            active = !active;
        }
    }

    property <bool> active: false;
    states [
        active when ta.pressed: {
            main-bg-color: bg-hover-color;
        }
    ]  
}

