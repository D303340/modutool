component InputBox inherits Rectangle{

    in property <string> text;
    property <length> text-padding: 20px;
    property <color> bg-color: #ffffff;
    
    height: 130px;
    width: 590px;

    background: bg-color;
    border-radius: 2.5px;
    
    // To make the text padding work
    Rectangle {
        width: root.width - text-padding - root.border-radius;
        height: root.height - text-padding - root.border-radius;

        Text {
            text: text;
            color: #000000;
            font-size: 40px;
            font-weight: 300;
            horizontal-alignment: left;
            vertical-alignment: center;
            width: parent.width;
            height: parent.height;
        }
    }
}
component NumberButtonsWithId inherits Rectangle {
    width: 100px;
    height: 80px;
    
    in property <string> top-text: "1";
    in property <string> bottom-text: "DISP\nIN";
    in property <string> id-text: "A";

    in property <length> top-text-font-size: 18px;
    in property <length> bottom-text-font-size: 20px;
    in property <length> id-text-font-size: 24px;

    in property <color> top-bg-color: #ffffff;
    in property <color> bottom-bg-color: #0000ff;
    in property <color> id-bg-color: #0000ff;

    property <color> main-top-color: top-bg-color;
    property <color> main-bottom-color: bottom-bg-color;
    property <color> main-id-color: id-bg-color;
    
    in property <color> top-text-color: #000000;
    in property <color> bottom-text-color: #ffffff;
    in property <color> id-text-color: #000000;

    in property <length> border-left-thickness: 1px;

    callback clicked();

    ta := TouchArea {
        GridLayout {
    
            // Top Text
            Rectangle {
                row: 0;
                colspan: 3;
    
                height: root.height*0.4;
    
                Text {
                    text: top-text;
                    color: top-text-color;
    
                    font-size: top-text-font-size;
                    font-weight: 700;
                }
    
                background: main-top-color;
            }
            
            // Bottom Text
            Rectangle {
                row:1;
    
                width: root.width * 0.7;
    
                Text {
                    text: bottom-text;
    
                    color: bottom-text-color;
    
                    font-size: bottom-text-font-size;
                    font-weight: 900;
    
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
    
                background: main-bottom-color;
            }
    
            Rectangle {
                // Border between second text and id
                row: 1; col: 1;
                background: #ffffff;
                width: border-left-thickness;
        
            }
    
            // ID (idk what to call it)
            Rectangle 
            {
                row: 1;
                col: 2;
                border-color: #ffffff;
        
                Text {
                    text: id-text;
        
                    color: id-text-color;
        
                    font-size: id-text-font-size;
                    font-weight: 700;
                }
        
                background: main-id-color;
            }
        }

        clicked => {
            clicked();
            active = !active;
        }
    }
    

    property <bool> active: false;
    states [
        active when ta.pressed: {
            main-top-color:  #dddddd;
            main-bottom-color: #3c83ff;
            main-id-color: #3c83ff;
        }
    ]

    background: bottom-bg-color;
}
